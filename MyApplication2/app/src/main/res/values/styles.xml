<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema base -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Personalizaciones básicas -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Para efectos de elevación -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>

    </style>

    <style name="CalendarDateText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="CalendarWeekDay" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="BlackSpinnerText" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ColorSelectorStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>


</resources>